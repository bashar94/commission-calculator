{
    "name": "bashar/commission-calculator",
    "description": "Bashar Commission Calculator",
    "keywords": [],
    "type": "project",
    "autoload": {
        "psr-4": {
            "Bashar\\CommissionCalculator\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Bashar\\CommissionCalculator\\Tests\\": "tests"
        }
    },
    "require": {
        "php": ">=7.0",
        "ext-bcmath": "*",
        "ext-json": "*",
        "vlucas/phpdotenv": "^4.3"
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "2.16",
        "phpunit/phpunit": "^6.5"
    },
    "config": {
        "sort-packages": true,
        "bin-dir": "bin"
    },
    "scripts": {
        "phpunit": "phpunit",
        "fix-cs": "php-cs-fixer fix",
        "test-cs": "php-cs-fixer fix --dry-run -v",
        "test": ["@phpunit", "@test-cs"]
    }
}
